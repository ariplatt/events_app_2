<%= search_form_for @q, :class => collapse_search_form, :id => "events_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :event_host_name_cont, "Event host name contains" %>
    <%= f.text_field :event_host_name_cont, :class => "form-control", :placeholder => "Event host name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :event_host_id, "Event host" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :event_host_id_gteq, :class => "form-control", :placeholder => "Event host greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :event_host_id_lteq, :class => "form-control", :placeholder => "Event host less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :event_end_date, "Event end date" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='event_end_dategteqPicker' data-target-input="nearest">
          <%= f.text_field :event_end_date_gteq, :class => "form-control datetimepicker-input", :placeholder => "Event end date greater than or equal to", :data => {:target => '#event_end_dategteqPicker'} %>
          <div class="input-group-append" data-target='#event_end_dategteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='event_end_datelteqPicker' data-target-input="nearest">
          <%= f.text_field :event_end_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Event end date less than or equal to", :data => {:target => '#event_end_datelteqPicker'} %>
          <div class="input-group-append" data-target='#event_end_datelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#event_end_dategteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#event_end_datelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#event_end_dategteqPicker').on("dp.change", function (e) {
              $('#event_end_datelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#event_end_datelteqPicker').on("dp.change", function (e) {
              $('#event_end_dategteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :event_end_time, "Event end time" %>
