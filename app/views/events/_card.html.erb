<div class="card mb-3">
  <h2 class="card-header h4">
    Event #<%= event.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Event</dt>
      <dd>
        <% if @event.event_goer.present? %>
          <%= link_to event.event_goer, event.event_goer %>
        <% end %>
      </dd>

      <dt>Event name</dt>
      <dd><%= event.event_name %></dd>

      <dt>Event start time</dt>
      <dd><%= event.event_start_time %></dd>

      <dt>Event start date</dt>
      <dd><%= event.event_start_date %></dd>

      <dt>Event end time</dt>
      <dd><%= event.event_end_time %></dd>

      <dt>Event end date</dt>
      <dd><%= event.event_end_date %></dd>

      <dt>Event host</dt>
      <dd><%= event.event_host_id %></dd>

      <dt>Event host name</dt>
      <dd><%= event.event_host_name %></dd>

      <dt>Photo</dt>
      <dd>
        <%= cl_image_tag @event.photo, class: "img-fluid" %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back event, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_profile == @event.event_goer %>
          <%= link_to edit_event_url(event), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_profile == @event.event_goer %>
          <%= link_to event, method: :delete, data: { confirm: "Do you really want to delete this event?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(event.updated_at) %> ago
  </div>
</div>
