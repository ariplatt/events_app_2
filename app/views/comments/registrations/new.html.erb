<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card mb-3">
      <h5 class="card-header">
        <%= resource_name != "user" ? resource_name.to_s.titleize : "" %> Sign Up
      </h5>

      <div class="card-body">
        <% was_validated = resource.errors.any? %>
        <% form_html_options = { novalidate: true, class: "mb-3" } %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: form_html_options) do |f| %>

          <div class="form-group">
            <% email_was_invalid = resource.errors.include?(:email) %>

            <% email_class = "form-control" %>

            <% if was_validated %>
              <% if email_was_invalid %>
                <% email_class << " is-invalid" %>
              <% else %>
                <% email_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :email %>

            <%= f.email_field :email, class: email_class, autofocus: true %>

            <% if email_was_invalid %>
              <% resource.errors.full_messages_for(:email).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_was_invalid = resource.errors.include?(:password) %>

            <% password_class = "form-control" %>

            <% if was_validated %>
              <% if password_was_invalid %>
                <% password_class << " is-invalid" %>
              <% else %>
                <% password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password %>

            <%= f.password_field :password, class: password_class %>

            <% if password_was_invalid %>
              <% resource.errors.full_messages_for(:password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_confirmation_was_invalid = resource.errors.include?(:password_confirmation) %>

            <% password_confirmation_class = "form-control" %>

            <% if was_validated %>
              <% if password_confirmation_was_invalid %>
                <% password_confirmation_class << " is-invalid" %>
              <% else %>
                <% password_confirmation_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password_confirmation %>

            <%= f.password_field :password_confirmation, class: password_confirmation_class %>

            <% if password_confirmation_was_invalid %>
              <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>


          <div class="form-group">
            <% event_id_was_invalid = resource.errors.include?(:event_id) %>

            <% event_id_class = "form-control" %>

            <% if was_validated %>
              <% if event_id_was_invalid %>
                <% event_id_class << " is-invalid" %>
              <% else %>
                <% event_id_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :event_id %>

            <%= f.number_field :event_id, :class => event_id_class, :placeholder => "Enter event id" %>

            <% if event_id_was_invalid %>
              <% resource.errors.full_messages_for(:event_id).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% comment_time_was_invalid = resource.errors.include?(:comment_time) %>

            <% comment_time_class = "form-control" %>

            <% if was_validated %>
              <% if comment_time_was_invalid %>
                <% comment_time_class << " is-invalid" %>
              <% else %>
                <% comment_time_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :comment_time %>

            <%= f.time_select :comment_time, class: "#{comment_time_class} col-sm-2" %>

            <% if comment_time_was_invalid %>
              <% resource.errors.full_messages_for(:comment_time).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% comment_date_was_invalid = resource.errors.include?(:comment_date) %>

            <% comment_date_class = "form-control" %>

            <% if was_validated %>
              <% if comment_date_was_invalid %>
                <% comment_date_class << " is-invalid" %>
              <% else %>
                <% comment_date_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :comment_date %>

            <%= f.date_select :comment_date, class: "#{comment_date_class} col-sm-2" %>

            <% if comment_date_was_invalid %>
              <% resource.errors.full_messages_for(:comment_date).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% comment_text_was_invalid = resource.errors.include?(:comment_text) %>

            <% comment_text_class = "form-control" %>

            <% if was_validated %>
              <% if comment_text_was_invalid %>
                <% comment_text_class << " is-invalid" %>
              <% else %>
                <% comment_text_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :comment_text %>

            <%= f.text_area :comment_text, :class => comment_text_class, :placeholder => "Enter comment text" %>

            <% if comment_text_was_invalid %>
              <% resource.errors.full_messages_for(:comment_text).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <%= f.button class: "btn btn-outline-primary btn-block" %>

          <hr>

          <%= render "comments/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
