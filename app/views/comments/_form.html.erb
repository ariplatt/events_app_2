<% was_validated = comment.errors.any? %>

<%= form_with(model: comment, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% event_class = "form-control" %>
    <% event_was_invalid = comment.errors.include?(:event) %>

    <% if was_validated %>
      <% if event_was_invalid %>
        <% event_class << " is-invalid" %>
      <% else %>
        <% event_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :event_id %>
    <%= f.collection_select :event_id, EventDetail.all, :id, :to_s, {}, class: "form-control" %>
    <% if event_was_invalid %>
      <% comment.errors.full_messages_for(:event).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% comment_time_class = "form-control" %>
    <% comment_time_was_invalid = comment.errors.include?(:comment_time) %>

    <% if was_validated %>
      <% if comment_time_was_invalid %>
        <% comment_time_class << " is-invalid" %>
      <% else %>
        <% comment_time_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :comment_time %>
    <%= f.time_select :comment_time, class: comment_time_class, placeholder: "Enter comment time" %>
    <% if comment_time_was_invalid %>
      <% comment.errors.full_messages_for(:comment_time).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% comment_date_class = "form-control" %>
    <% comment_date_was_invalid = comment.errors.include?(:comment_date) %>

    <% if was_validated %>
      <% if comment_date_was_invalid %>
        <% comment_date_class << " is-invalid" %>
      <% else %>
        <% comment_date_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :comment_date %>
    <%= f.date_select :comment_date, class: comment_date_class, placeholder: "Enter comment date" %>
    <% if comment_date_was_invalid %>
      <% comment.errors.full_messages_for(:comment_date).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% comment_text_class = "form-control" %>
    <% comment_text_was_invalid = comment.errors.include?(:comment_text) %>

    <% if was_validated %>
      <% if comment_text_was_invalid %>
        <% comment_text_class << " is-invalid" %>
      <% else %>
        <% comment_text_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :comment_text %>
    <%= f.text_area :comment_text, class: comment_text_class, placeholder: "Enter comment text" %>
    <% if comment_text_was_invalid %>
      <% comment.errors.full_messages_for(:comment_text).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
