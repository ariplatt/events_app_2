<%= form_with(model: @comment, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :email %>

    <%= f.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>

    <%= f.text_field :password, class: "form-control" %>
  </div>

  <%= f.hidden_field :event_id, value: @event_detail.id %>

  <div class="form-group">
    <%= f.label :comment_time %>

    <%= f.date_select :comment_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :comment_date %>

    <%= f.date_select :comment_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :comment_text %>
    <%= f.text_area :comment_text, rows: "3", class: "form-control" %>
  </div>

  <%= f.submit "Create comment", class: "btn btn-block btn-outline-secondary" %>
<% end %>
