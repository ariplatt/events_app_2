<div class="card mb-3">
  <h2 class="card-header h4">
    Event Detail #<%= event_detail.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Event</dt>
      <dd>
        <% if @event_detail.event.present? %>
          <%= link_to event_detail.event, event_detail.event %>
        <% end %>
      </dd>

      <dt>Event name</dt>
      <dd><%= event_detail.event_name %></dd>

      <dt>Event location</dt>
      <dd><%= event_detail.event_location %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back event_detail, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_event_detail_url(event_detail), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to event_detail, method: :delete, data: { confirm: "Do you really want to delete this event_detail?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(event_detail.updated_at) %> ago
  </div>
</div>
