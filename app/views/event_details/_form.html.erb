<% was_validated = event_detail.errors.any? %>

<%= form_with(model: event_detail, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% event_class = "form-control" %>
    <% event_was_invalid = event_detail.errors.include?(:event) %>

    <% if was_validated %>
      <% if event_was_invalid %>
        <% event_class << " is-invalid" %>
      <% else %>
        <% event_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :event_id %>
    <%= f.collection_select :event_id, Event.all, :id, :to_s, {}, class: "form-control" %>
    <% if event_was_invalid %>
      <% event_detail.errors.full_messages_for(:event).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% event_name_class = "form-control" %>
    <% event_name_was_invalid = event_detail.errors.include?(:event_name) %>

    <% if was_validated %>
      <% if event_name_was_invalid %>
        <% event_name_class << " is-invalid" %>
      <% else %>
        <% event_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :event_name %>
    <%= f.text_field :event_name, class: event_name_class, placeholder: "Enter event name" %>
    <% if event_name_was_invalid %>
      <% event_detail.errors.full_messages_for(:event_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% event_location_class = "form-control" %>
    <% event_location_was_invalid = event_detail.errors.include?(:event_location) %>

    <% if was_validated %>
      <% if event_location_was_invalid %>
        <% event_location_class << " is-invalid" %>
      <% else %>
        <% event_location_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :event_location %>
    <%= f.text_field :event_location, class: event_location_class, placeholder: "Enter event location" %>
    <% if event_location_was_invalid %>
      <% event_detail.errors.full_messages_for(:event_location).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
